<config><fields name="params"><fieldset name="basic">
		<field name="ronline" type="text" default="http://50.7.244.74:8126/autodj"
			label="URL Stream"
			description="URL Stream mp3 radio" />
		<field name="stream" type="list" default="0" label="MOD_RAR_RADIO_TYPE_STREAM" description="MOD_RAR_RADIO_TYPE_STREAM_DATA">
			<option value="0">Mp3 (Shoutcast, IceCast, Live365)</option>
			<option value="1">Windows Media-Silverligth(wma)</option>
			<option value="2">Windows Media(wma, mp3, m3u)</option>
			<option value="3">HTML5 Beta </option> <!--version -->
		</field>
	<field name="modo" type="radio" default="1" label="POPup" description="Asignar si desea un popup o incrustado, incrustado en joomla solo tiene Reproductor e imagen">
			<option value="1">POP UP</option>
			<option value="0">Endebido</option>
		</field>
<field name="autostar" type="radio" default="1" label="AutoStar Embed" description="Iniciar automaticamente el reproductor incrustado">
			<option value="1">MOD_RAR_RADIO_YES</option>
			<option value="0">MOD_RAR_RADIO_NO</option>
		</field>
</fieldset>
<fieldset name="title" label="MOD_RAR_RADIO_SONG_TITLE">

		<field name="Stitulos" type="list" default="3" label="MOD_RAR_RADIO_TYPE_TITLE" description="MOD_RAR_RADIO_TYPE_TITLE_DESCRIP">
			<option value="0">IceCast</option>
			<option value="1">Shoutcast</option>
			<option value="2">ZaraFtp / CurrentSong</option>
			<option value="3">MOD_RAR_RADIO_TYPE_TITLE_NO</option>
		</field>
		<field name="StituloTexto" type="text" default="http://mydomain.com/title/currentSong.txt"


			label="MOD_RAR_RADIO_TYPE_TITLE_TEXT"
			description="MOD_RAR_RADIO_TYPE_TITLE_TEXT_DESCRIP" />	
</fieldset>
<fieldset name="popup" label="MOD_RAR_RADIO_POPUP_PROPERTIS">		


		<field name="imagen" type="text" default="/modules/mod_rar_radio/tmpl/imagenes/now.jpg"
			label="MOD_RAR_RADIO_IMAGE_FRONT_URL"

			description="MOD_RAR_RADIO_IMAGE_FRONT_URL_DESCRIP" />
		<field name="alt-imagen" type="text" default="radio online"
			label="MOD_RAR_RADIO_IMAGE_FRONT_URL_ALT"

			description="MOD_RAR_RADIO_IMAGE_FRONT_URL_ALT_DESCRIP" />

		<field name="logo" type="text" default="/modules/mod_rar_radio/tmpl/imagenes/logo.jpg"
			label="MOD_RAR_RADIO_POPUP_LOGO"
			description="MOD_RAR_RADIO_POPUP_LOGO_DESCRIP" />
		<field name="logo-alt" type="text" default="El logo de la Radio"
			label="MOD_RAR_RADIO_POPUP_LOGO_ALT"
			description="MOD_RAR_RADIO_POPUP_LOGO_ALT_DESCRIP" />
		<field name="ancho" type="text" default="330"
			label="MOD_RAR_RADIO_POPUP_WIDTH"
			description="MOD_RAR_RADIO_POPUP_WIDTH_DESCRIP" />
		<field name="alto" type="text" default="187"
			label="MOD_RAR_RADIO_POPUP_HEIGHT"
			description="MOD_RAR_RADIO_POPUP_HEIGHT_DESCRIP" />
	
	</fieldset></fields></config>

<config><fields name="params"><fieldset name="ads" label="Google AdSense">
		<field name="resize" type="radio" default="1" label="MOD_RAR_RADIO_WINDOW" description="MOD_RAR_RADIO_WINDOW_DESCRIP">
			<option value="1">MOD_RAR_RADIO_YES</option>
			<option value="0">MOD_RAR_RADIO_NO</option>
		</field>
		<field name="adsense" type="radio" default="1" label="MOD_RAR_RADIO_ADS" description="MOD_RAR_RADIO_ADS_DESCRIP">
			<option value="1">MOD_RAR_RADIO_YES</option>
			<option value="0">MOD_RAR_RADIO_NO</option>
		</field>
		<field name="adcliente" type="text" default="pub-6824494942704691" label="MOD_RAR_RADIO_ADS_ID" description="MOD_RAR_RADIO_ADS_ID_DESCRIP"/>
	</fieldset></fields></config>
<config><fields name="params"><fieldset name="basic">
<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
</fieldset></fields></config>
<config><fields name="params"><fieldset name="FComments" label="Faceboo Comments">
<field name="fcactive" type="radio" default="1" label="Active Facebook Comment" description="MOD_RAR_RADIO_WINDOW_DESCRIP">
			<option value="1">MOD_RAR_RADIO_YES</option>
			<option value="0">MOD_RAR_RADIO_NO</option>
		</field>

</fieldset></fields></config>
